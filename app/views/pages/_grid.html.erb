<link href='https://fonts.googleapis.com/css?family=Oswald:400,700,300' rel='stylesheet' type='text/css'>

<section class="intro">
  <div class="intro-block">
    <div class="centerfold-wrap">
      <div class="hex-master-wrap">
        <div class="hover-notify"></div>
        <div class="grid-1">
          <div class="hex-wrap rails" data-title="RAILS" data-content="rails-desc" data-color="#333333">
            <%= render "hexborder", image: "rails.png" %>
          </div>
          <div class="hex-wrap ruby" id="ruby" data-title="RUBY" data-content="ruby-desc" data-color="#EB1D26">
            <%= render "hexborder", image: "ruby.png" %>
          </div>
        </div>
        <div class="grid-2">
          <div class="hex-wrap python" data-title="PYTHON" data-content="python-desc" data-color="#FFD84A">
            <%= render "hexborder", image: "python.png" %>
          </div>
          <div class="hex-wrap c" data-title="C" data-content="c-desc" data-color="#0083de">
            <%= render "hexborder", image: "c6.png" %>
          </div>
          <div class="hex-wrap javascript" data-title="JAVASCRIPT" data-content="javascript-desc" data-color="#8cc84b">
            <%= render "hexborder", image: "js.png" %>
          </div>
        </div>
        <div class="grid-3">
          <div class="hex-wrap react" data-title="REACT" data-content="react-desc" data-color="#62DAFB">
            <%= render "hexborder", image: "react.png" %>
          </div>
          <div class="hex-wrap heroku" data-title="HEROKU" data-content="heroku-desc" data-color="#6762A5">
            <%= render "hexborder", image: "rails.png" %>
          </div>
        </div>
      </div>

      <div class="code-display">
        <div class="code-description">
          <div class="rails-desc">
            <p class="code-title"></p>
            <p><span>Duration:</span>4 Years</p>
            <p><span>Examples:</span>Kitty, Kitchup, This here site</p>
            <div class="code-icon"></div>
          </div>
          <div class="ruby-desc">
            <p class="code-title"></p>
            <p><span>Duration:</span>6 Years</p>
            <p><span>Experience:  </span>HTMLpython, c, Javascript + Branches</p>
            <div class="code-icon"></div>
          </div>
          <div class="python-desc">
            <p class="code-title"></p>
            <p><span>Duration:</span>6 Years</p>
            <p><span>Experience:  </span>HTML5 (most recent)</p>
            <div class="code-icon"></div>
          </div>
          <div class="c-desc">
            <p class="code-title"></p>
            <p><span>Duration:</span>6 Years</p>
            <p><span>Experience:  </span>CSS3 (most recent)</p>
            <div class="code-icon"></div>
          </div>
          <div class="javascript-desc">
            <p class="code-title"></p>
            <p><span>Duration:</span>4 Years</p>
            <p><span>Experience:  </span>Javascript, Jquery, AngularJS, NodeJS</p>
            <div class="code-icon"></div>
          </div>
          <div class="react-desc">
            <p class="code-title"></p>
            <p><span>Duration:</span>4 Years</p>
            <p><span>Experience:  </span>Wordpress, Custom react Creation</p>
            <div class="code-icon"></div>
          </div>
          <div class="heroku-desc">
            <p class="code-title"></p>
            <p><span>Duration:</span>4 Years</p>
            <p><span>Experience:  </span>Up-to-date heroku Practices</p>
            <div class="code-icon"></div>
          </div>
        </div>
      </div>
      <div class="hoverblock"></div>
    </div>
  </div>

</section>
<script type="text/javascript">
  $(document).ready(function () {
    function hex_initial_animation() {
      $(".hex-wrap,.hover-notify").velocity("transition.expandIn", { stagger: 150 });
      $(".hex-wrap").velocity("callout.pulse");
      $(".hoverblock").velocity("fadeOut", { delay: 3000, duration: 0 });
    }
    hex_initial_animation();

    var hoverdetect = setInterval(function(){ hovernotify() }, 3000);
    function hovernotify() {
      $(".hover-notify").velocity("callout.tada");
    }
    function myStopFunction() {
      $(".hover-notify").velocity('stop', true).velocity("fadeOut");
      clearInterval(hoverdetect);
    }

    $(".hex-init").mouseenter(function () {

      myStopFunction();

      var title_color =  $(this).parent().attr("data-color");
      var title_name = $(this).parent().attr("data-title");
      var desc_name = $(this).parent().attr("data-content");

      function hex_description() {
        $('.code-description').velocity('stop', true).velocity("transition.slideRightBigIn");
        $('.' + desc_name).siblings().removeClass('desc-active');
        setTimeout(function() {
          $('.' + desc_name).addClass('desc-active');
          $('.code-descriptopn > div, .desc-active').children().velocity('stop', true).velocity("transition.slideRightBigIn", { stagger: 300 });
          $('.code-title, .desc-active span').velocity({color: title_color}, { queue: false });
          $('.code-title').text(title_name)
        }, 0);
      }
      hex_description();

      $(this).parent().addClass('hexactive'); 
      $('.hexactive').velocity({scaleX:"1.1",scaleY:"1.1"}, { duration: 100 });

    }).mouseleave(function () {
     $('.hexactive').velocity('reverse').removeClass('hexactive');
   });
  });
</script>
