<div class="student-feedback">
  <div class="student-content">
    <div class="img-container">
      <img src=<%= review.img_url %> class="img-md-square <%= local_assigns[:bigger] ? 'bigger' : '' %>">
    </div>
    <div class="feedback-content-container">
      <div class="flex">
        <div class="feedback-content">
          <strong><%= review.person.split(' ').first %></strong>
          <div class="d-sm-inline ml-1"><%=raw review.review.gsub(/\n/, '<br />') %></div>
        </div>
        <div class="relation">
          <%= review.relation %>
        </div>
      </div>
    </div>
  </div>
</div>
