
<div class="container">
  <div class="row">
    <div class="col-12 reviews">
      <h2>Reviews</h2>
      <h5>Le Wagon Reviews</h5>
      <% @reviews.each do |review| %>
            <div class="student-feedback">
              <div class="student-content">
                <div class="img-container">
                  <img src=<%= review.img_url %> class="img-md-square">
                </div>
                <div class="feedback-content-container">
                  <div class="feedback-content">
                    <strong><%= review.person %></strong>
                    <div class="d-sm-inline ml-1"><%= review.review %></div>
                  </div>
                </div>
              </div>
            </div>
      <% end %>
    </div>
  </div>
</div>
